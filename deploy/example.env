# Limbo image/tag
LIMBO_IMAGE=espressomatic/limbo:latest
LIMBO_PORT=5001

# Optional external provider keys
FANART_KEY=
TADB_KEY=2
LASTFM_KEY=
LASTFM_SECRET=
SPOTIFY_ID=
SPOTIFY_SECRET=
SPOTIFY_REDIRECT_URL=http://HOST_IP:5001


#-------------------------------------------------------------
#-------------------------------------------------------------
# You will generally not need to touch/change anything below

# MusicBrainz mirror DB
MB_DB_HOST=db
MB_DB_PORT=5432
MB_DB_USER=musicbrainz
MB_DB_PASSWORD=musicbrainz
MB_DB_NAME=musicbrainz_db

# Cache DB for Limbo
LIMBO_CACHE_DB=lm_cache_db
LIMBO_CACHE_USER=limbo
LIMBO_CACHE_PASSWORD=limbo
LIMBO_CACHE_HOST=db
LIMBO_CACHE_PORT=5432
LIMBO_CACHE_SCHEMA=public
LIMBO_CACHE_FAIL_OPEN=false
LIMBO_INIT_STATE_DIR=/metadata/init-state

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Solr
SOLR_URL=http://search:8983/solr

#-------------------------------------------------------------
# Optional extension hooks (run after built-in processing)
# LIMBO_DB_HOOK_AFTER_MODULE=
# LIMBO_DB_HOOK_AFTER_PATH=
# LIMBO_MITM_AFTER_MODULE=
# LIMBO_MITM_AFTER_PATH=

#-------------------------------------------------------------
# DO NOT CHANGE THESE, unless you have a very specific
# reason to, and know exactly what they do.
# Changing these settings is a great way to BREAK THINGS

# Lidarr Metadata Server flags
ROOT_PATH=
LIDARR_METADATA_CONFIG=BRIDGE
USE_CACHE=true
PRODUCTION=false
ENABLE_STATS=false
DEBUG=false
LIMBO_APIKEY=limbo-2026-cptbvfe7aq

# If using the full compose with external network
MB_NETWORK=musicbrainz_default
